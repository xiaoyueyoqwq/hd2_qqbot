  api:
    enabled: true
    host: "0.0.0.0"
    port: 8080
    external_url: "http://127.0.0.1:8080"

# -----------------------------------------------------------------
# Redis 缓存配置
# -----------------------------------------------------------------
redis:
  host: 127.0.0.1
  port: 6379
  db: 0
  password: ""
  timeout: 5

# -----------------------------------------------------------------
# API 缓存配置
# -----------------------------------------------------------------
cache:
  # 统一缓存更新间隔（秒）
  update_interval: 90
  # 启动时立即更新
  immediate_update: true
  # API请求间隔（秒），避免触发限速
  request_delay: 5